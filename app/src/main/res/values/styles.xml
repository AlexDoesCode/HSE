<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="HSE24" />

    <style name="HSE24.Theme" parent="AppTheme" />

    <style name="HSE24.Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/hse_primary</item>
        <item name="colorPrimaryDark">@color/hse_primary_dark</item>
        <item name="colorAccent">@color/hse_accent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="HSE24.Text">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="HSE24.Text.15sp">
        <item name="android:textSize">@dimen/text_size_15sp</item>
    </style>

    <style name="HSE24.Text.15sp.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HSE24.Text.18sp">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="HSE24.Text.18sp.Grey">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="HSE24.Text.18sp.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HSE24.Text.20sp">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="HSE24.Text.20sp.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HSE24.Text.20sp.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HSE24.Text.20sp.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
